{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "Clerk": {
      "type": "remote",
      "url": "https://mcp.clerk.com/mcp"
    },
    "automatic": {
      "command": [
        "/Applications/Automatic.app/Contents/MacOS/automatic",
        "mcp-serve"
      ],
      "environment": {
        "AUTOMATIC_PROJECT": "automatic-app"
      },
      "type": "local"
    }
  }
}